{
  "name": "hackflix-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:server": "babel {src/**/*.js,src/*.js} -d dist/",
    "build:mocks": "cp -r src/mocks dist/src",
    "prestart": "npm run build:server && npm run build:mocks",
    "start": "node dist/src/server.js",
    "start:unsecure": "UNSECURE=true node dist/src/server.js",
    "start:slow": "SLOW=true node dist/src/server.js"
  },
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "json-server": "^0.10.1"
  }
}
