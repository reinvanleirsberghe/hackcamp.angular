{
  "name": "hackflix-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:server": "babel {src/**/*.js,src/*.js} -d dist/",
    "build:mocks": "cpy './src/mocks/*' './dist' --parents ",
    "prestart": "run-s build:server build:mocks",
    "start": "node dist/src/server.js",
    "start:unsecure": "cross-env UNSECURE=true node dist/src/server.js",
    "start:slow": "cross-env SLOW=true node dist/src/server.js"
  },
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cpy-cli": "^1.0.1",
    "cross-env": "^5.0.5",
    "json-server": "^0.10.1",
    "npm-run-all": "^4.1.1"
  }
}
